      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="7.0.11" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\*.*">
